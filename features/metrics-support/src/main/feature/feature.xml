<features xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="${project.artifactId}-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.3.0"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

    <repository>mvn:ddf.features/cxf/${project.version}/xml/features</repository>

    <feature name="metrics-services" version="${project.version}" description="Support for metrics services">
        <feature>wrap</feature>
        <feature>cxf-jaxrs</feature>
        <bundle>wrap:mvn:io.micrometer/micrometer-core/${micrometer.version}</bundle>
        <bundle>wrap:mvn:io.micrometer/micrometer-registry-prometheus/${micrometer.version}</bundle>
        <bundle>mvn:org.codice.ddf.lib.metrics/meter-registry-service/${project.version}/</bundle>
        <bundle>mvn:org.codice.ddf.lib.metrics/meter-registry/${project.version}</bundle>
        <bundle>mvn:org.codice.ddf.lib.metrics/metrics-endpoint/${project.version}</bundle>
    </feature>
</features>